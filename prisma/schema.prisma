generator client {
  provider = "prisma-client-js"
  output   = "generated"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String  @id @unique
  email        String
  firstName    String
  lastName     String
  profileImage String?
  home         Home[]
}

model Home {
  id               String   @id @default(uuid())
  title            String?
  description      String?
  guests           String?
  bedrooms         String?
  country          String?
  photo            String?
  price            String?
  addedCategory    Boolean  @default(false)
  addedDescription Boolean  @default(false)
  addedLocation    Boolean  @default(false)
  createdAt        DateTime @default(now())
  User             User?    @relation(fields: [userId], references: [id])
  userId           String?
}
